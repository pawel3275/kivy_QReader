<MyPopup>:
    title: root.type
    size_hint: (0.6, 0.6)
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 10
        Label:
            text: root.result
            text_size: self.width, None
            size_hint: 1, 0.6
            height: self.texture_size[1]
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            halign: 'center'
            valign: 'top'
        Button:
            text: "Close"
            size_hint: 1, 0.1
            pos_hint: {"bottom":1, "center_x": 0.5, "center_y": 0.5}
            on_release: root.dismiss()

<QReader>:
    FloatLayout:
        size: self.parent.size